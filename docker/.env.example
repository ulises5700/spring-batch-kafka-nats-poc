# ============================================================
# Spring Batch Kafka NATS POC - Environment Configuration
# ============================================================
# Copy this file to .env and customize as needed:
#   cp .env.example .env
#
# The .env file is gitignored and should NOT be committed.
# ============================================================

# ------------------------------------------------------------
# KAFKA CONFIGURATION
# ------------------------------------------------------------
KAFKA_BROKER_ID=1
KAFKA_REPLICATION_FACTOR=1
KAFKA_AUTO_CREATE_TOPICS=true
KAFKA_LOG_RETENTION_HOURS=168

# External port (host machine)
KAFKA_EXTERNAL_PORT=9092

# Internal port (container network)
KAFKA_INTERNAL_PORT=29092

# ------------------------------------------------------------
# ZOOKEEPER CONFIGURATION
# ------------------------------------------------------------
ZOOKEEPER_PORT=2181
ZOOKEEPER_TICK_TIME=2000

# ------------------------------------------------------------
# NATS CONFIGURATION
# ------------------------------------------------------------
NATS_CLIENT_PORT=4222
NATS_HTTP_PORT=8222
NATS_CLUSTER_PORT=6222

# Enable JetStream (persistent messaging)
NATS_JETSTREAM_ENABLED=true

# ------------------------------------------------------------
# KAFKA UI CONFIGURATION
# ------------------------------------------------------------
KAFKA_UI_PORT=8080
KAFKA_UI_CLUSTER_NAME=fintech-local

# ------------------------------------------------------------
# POSTGRESQL CONFIGURATION (Optional - uncomment to use)
# ------------------------------------------------------------
# POSTGRES_USER=fintech
# POSTGRES_PASSWORD=fintech_secret_change_me
# POSTGRES_DB=settlement_db
# POSTGRES_PORT=5432

# ------------------------------------------------------------
# APPLICATION PORTS
# ------------------------------------------------------------
GATEWAY_PORT=8081
FRAUD_SERVICE_PORT=8082
SETTLEMENT_SERVICE_PORT=8083

# ------------------------------------------------------------
# FRAUD DETECTION CONFIGURATION
# ------------------------------------------------------------
# Transactions above this amount will be rejected
FRAUD_THRESHOLD_AMOUNT=1000
FRAUD_THRESHOLD_CURRENCY=USD

# ------------------------------------------------------------
# BATCH PROCESSING CONFIGURATION
# ------------------------------------------------------------
BATCH_CHUNK_SIZE=100
BATCH_OUTPUT_DIR=./output

# ------------------------------------------------------------
# LOGGING CONFIGURATION
# ------------------------------------------------------------
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_APP=DEBUG

# ------------------------------------------------------------
# NETWORK CONFIGURATION
# ------------------------------------------------------------
NETWORK_SUBNET=172.28.0.0/16
NETWORK_NAME=fintech-network
